{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "outDir": "lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
    }
  },
  "exclude": [
    "node_modules",
    "example",
    "__tests__",
    "mock"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
